<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/avUpdatesRecentsTitle"
        android:visibility="gone"
        android:text="@string/av_updates_recents"
        android:drawableEnd="@drawable/res_circle"
        android:drawableTint="@color/androidRobotGreen"
        android:drawablePadding="10dp"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="14sp"
        android:textColor="?android:textColor"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/avUpdatesRecentsListContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/avUpdatesRecentsMore"
        android:visibility="gone"
        android:text="@string/av_updates_view_more"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textAllCaps="false"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:layout_marginStart="20dp"
        android:textSize="12sp"
        android:textColor="?colorTextSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
