<resources>
    <!-- This theme is set on application, which means it's applied to all activities. -->
    <style name="LaunchScreenBase" parent="LaunchScreenBaseAny">
        <!-- Allow all cutouts for the splash screen (including horizontal ones e.g. waterfall). -->
        <!-- LAYOUT_IN_DISPLAY_CUTOUT_MODE_ALWAYS is available on API 30+ -->
        <item name="android:windowLayoutInDisplayCutoutMode">always</item>
    </style>

    <style name="CutoutsAppTheme" parent="AppTheme">
        <!-- Allow all cutouts (including horizontal ones e.g. waterfall). -->
        <item name="android:windowLayoutInDisplayCutoutMode">always</item>
    </style>

    <style name="RedCutoutsAppTheme" parent="AppTheme.CnRed">
        <item name="android:windowLayoutInDisplayCutoutMode">always</item>
    </style>

    <style name="BlackCutoutsAppTheme" parent="AppTheme.Black">
        <item name="android:windowLayoutInDisplayCutoutMode">always</item>
    </style>

    <style name="BlackGrayCutoutsAppTheme" parent="AppTheme.BlackGray">
        <item name="android:windowLayoutInDisplayCutoutMode">always</item>
    </style>
</resources>