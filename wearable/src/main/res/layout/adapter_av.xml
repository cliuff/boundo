<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <Space
            android:id="@+id/avAdapterSpace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/avAdapterInfo"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/avAdapterInfoLogo"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:padding="4dp"
                android:layout_gravity="center"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/avAdapterInfoName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="18sp"
                    android:textColor="?colorAOnBackground"/>
                <TextView
                    android:id="@+id/avAdapterInfoTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="8sp"
                    android:textColor="?colorTextSub"
                    tools:ignore="SmallSp" />
            </LinearLayout>
            <TextView
                android:id="@+id/avAdapterInfoAPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:paddingEnd="20dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="?colorAOnBackground"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</layout>
